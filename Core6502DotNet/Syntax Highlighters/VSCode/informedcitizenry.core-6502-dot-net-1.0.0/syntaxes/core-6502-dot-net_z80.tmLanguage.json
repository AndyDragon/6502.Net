{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Core 6502.Net (Z80)",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#characters"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#registers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.pseudoop.core6502_net_z80",
          "match": "(?i)(\\.(addr|align|binary|byte|char|cbmflt|cbmfltp|cstring|dint|dword|fill|lint|long|lstring|nstring|pstring|rta|sbyte|sint|string|word))\\b"
        },
        {
          "name": "keyword.control.directive.core6502_net_z80",
          "match": "(?i)(\\.(assert|bank|binclude|block|break|case|continue|comment|cpu|default|echo|elseifndef|elseifdef|else|elseif|encoding|end|endblock|endfunction|endif|endmacro|endpage|endrepeat|endrelocate|endswitch|endwhile|eor|equ|error|errorif|for|foreach|function|global|goto|if|include|initmem|invoke|let|macro|map|next|page|pseudopc|realpc|relocate|repeat|return|switch|target|unmap|warn|warnif|while))\\b"
        },
        {
          "name": "keyword.other.mnemonic.core6502_net_z80",
          "match": "(?i)\\b(adc|add|and|bit|call|ccf|cp|cpd|cpdr|cpi|cpir|cpl|daa|dec|di|djnz|ei|ex|exx|halt|im|in|inc|ind|indr|ini|inir|jp|jr|ld|ldd|lddr|ldi|ldir|neg|nop|or|otdr|otir|out|outd|outi|pop|push|res|ret|reti|retn|rl|rla|rlc|rlca|rld|rr|rra|rrc|rrca|rrd|rst|sbc|scf|set|sla|sra|srl|sub|xor)\\b"
        },
        {
          "name": "keyword.other.macro.core6502_net_z80",
          "match": "(?i)\\.[a-zA-Z]\\w*\\b"
        },
        {
          "name": "keyword.function.core6502_net_z80",
          "match": "(?i)\\b(abs|acos|atan|byte|cmbflt|cbmfltp|cbrt|ceil|cos|cosh|deg|dword|exp|float|floor|format|frac|hypot|len|ln|log|log10|long|peek|poke|pow|rad|random|round|section|sgn|sin|sinh|sqrt|tan|tanh|word)\\b"
        },
        {
          "name": "keyword.define",
          "match": "(?i)\\b(CURRENT_PASS|false|MATH_E|MATH_PI|INT8_MAX|INT8_MIN|INT16_MAX|INT16_MIN|INT24_MAX|INT24_MIN|INT32_MAX|INT32_MIN|true|UINT8_MAX|UINT8_MIN|UINT16_MAX|UINT16_MIN|UINT24_MAX|UINT24_MIN|UINT32_MAX|UINT32_MIN)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.core6502_net_z80",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.core6502_net_z80",
          "match": "\\\\."
        }
      ]
    },
    "characters": {
      "name": "string.quoted.single.core6502_net_z80",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.core6502_net_z80",
          "match": "\\\\(['\"\\\\0abfnrtv]|x[0-9a-fA-F]{1,4}|u[0-9a-fA-F]{4})"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.core6502_net_z80",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.core6502_net_z80",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.line.core6502_net_z80",
          "begin": ";",
          "end": "$"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.binary.core6502_net_z80",
          "match": "(?i)(\\%|0b)[0-1_]+\\b"
        },
        {
          "name": "constant.numeric.altbinary.core6502_net_z80",
          "match": "(?i)(\\%|0b)[.#_]+\\b"
        },
        {
          "name": "constant.numeric.hexadecimal.core6502_net_z80",
          "match": "(?i)(\\$|0x)[0-9a-f_]+\\b"
        },
        {
          "name": "constant.numeric.octal.core6502_net_z80",
          "match": "(?i)(0[0-7_]+)|((0o)[0-7_]+)\\b"
        },
        {
          "name": "constant.numeric.scientific.core6502_net_z80",
          "match": "(?i)\\b[0-9_](?:\\.\\d+)?[Ee][-+]\\[0-9_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.core6502_net_z80",
          "match": "(?i)\\b[0-9_]+(\\.[0-9_]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.core6502_net_z80",
          "match": "\\+|\\-|\\=|\\*|\\/|\\!|\\<|\\>|\\&|\\||\\^|\\(|\\)|\\[|\\]\\,"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "keyword.register.core6502_net_z80",
          "match": "(?i)\\b(a|af|b|bc|c|d|de|e|h|hl|i|ix|ixh|ixl|iy|iyh|iyl|r|sp)\\b"
        }
      ]
    }
  },
  "scopeName": "source.core6502_net_z80"
}