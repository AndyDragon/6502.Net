{
	"comments": {
		"lineComment": "//",
		"blockComment": [ "/*", "*/" ]
	},
	"brackets": [
		[ "[", "]" ],
		[ "(", ")" ]
	],
	"autoClosingPairs": [
		{
			"open": "[",
			"close": "]"
		},
		{
			"open": "(",
			"close": ")"
		},
		{
			"open": "'",
			"close": "'",
			"notIn": [ "string", "comment" ]
		},
		{
			"open": "\"",
			"close": "\"",
			"notIn": [ "string" ]
		}
	],
	"surroundingPairs": [
		[ "[", "]" ],
		[ "(", ")" ],
		[ "\"", "\"" ],
		[ "'", "'" ]
	],
	"folding": {
		"markers": {
			"start": "(?i)(^|\\s)(\\.(block|for|foreach|function|if|ifdef|ifndef|repeat|switch|while))\\b",
			"end": "(?i)(^|\\s)(\\.(endblock|endfunction|endif|endrepeat|endswitch|endwhile|next))\\b"
		}
	}
}