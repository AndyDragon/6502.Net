sob            = $2b
readst        = $ffb7
setlfs        = $ffba
setnam        = $ffbd
open        = $ffc0
close        = $ffc3
chkin        = $ffc6
clrchn        = $ffcc
chrin        = $ffcf
load        = $ffd5

load        .macro    filename,device,ml=0
            .assert \ml == 0 || \ml == 1, format("Invalid device number {0}.", \ml)
            lda #fname_end-fname
            ldx #<fname
            ldy #>fname
            jsr setnam
            lda #2
            tay
            ldx #\device
            jsr setlfs
            .if \ml == 0
pointer            = $fb
                jsr open
                jsr chkin
                jsr chrin
                jsr chrin
                lda sob
                sta pointer
                lda sob+1
                sta pointer+1
                ldy #0
loop            jsr readst
                bne eof
                jsr chrin
                sta (pointer),y
                inc pointer
                bne loop
                inc pointer+1
                jmp loop
eof                lda #2
                jsr close
                jsr clrchn
                jmp fname_end
            .else
                lda #0
                jsr load
            .endif
            jmp fname_end
fname        .string $"{\filename}"
fname_end
            .endmacro
            * = $c000
            .load "myprogram",8