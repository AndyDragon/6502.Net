dec16       .macro
            lda \1
            bne skip
            dec \1+1
skip        dec \1
            .endmacro

inc16        .macro
            inc    \1
            bne done
            inc \1+1
done        = *
            .endmacro

dec24       .macro
            .dec16 \1
            bne skip
            dec \1+1
skip        dec \1
            .endmacro

inc24       .macro
            .inc16 \1
            bne done
            .inc \1+1
done        = *
            .endmacro